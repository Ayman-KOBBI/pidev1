{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notes list</h1>

    <table>
        <thead>
            <tr>
                <th>Idnote</th>
                <th>Idev</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('note_show', { 'idNote': note.idNote }) }}">{{ note.idNote }}</a></td>
                <td>{{ note.idEv }}</td>
                <td>{{ note.note }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('note_show', { 'idNote': note.idNote }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('note_edit', { 'idNote': note.idNote }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('note_new') }}">Create a new note</a>
        </li>
    </ul>
{% endblock %}
