{% extends 'baseback.html.twig' %}

{% block body %}
    <center>
    <h1>Event</h1>

    <table  width="500"  class="table table-striped">
        <tbody>

            <tr>
                <th>Nom Organisateur :</th>
                <td>{{ event.nomOrg }}</td>
            </tr>
            <tr>
                <th>Nom Event :</th>
                <td>{{ event.nomEvent }}</td>
            </tr>
            <tr>
                <th>Lieu :</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Nombre de Place :</th>
                <td>{{ event.nbPlace }}</td>
            </tr>
            <tr>
                <th>Date Event :</th>
                <td>{% if event.dtEvent %}{{ event.dtEvent|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix (dt) :</th>
                <td>{{ event.prix }}</td>
            </tr>
            <tr>
                <th>Description :</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Etat :</th>
                <td>{{ event.etat }}</td>
            </tr>
        </tbody>


    <ul>




        <td> <a class="btn btn-outline-info" href="{{ path('events_edit', { 'idEv': event.idEv }) }}">Edit</a></td>

        <td>  {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-outline-danger">
            {{ form_end(delete_form) }}</td>

    </ul>
    </table>
        <td> <a class="btn btn-outline-warning" href="{{ path('events_index') }}">Back to the list</a></td>


    </center>
{% endblock %}
