{% extends 'base.html.twig' %}

{% block second %}
    <center>
    <h1>EVENTS</h1>
    <table border="1">
        <thead>
            <tr>

                <th>Nom Organsiateur</th>
                <th>Nom Event</th>
                <th>Lieu</th>
                <th>Nombre de Place</th>
                <th>Date Event</th>
                <th>Prix (dt)</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>

                <td>{{ event.nomOrg }}</td>
                <td>{{ event.nomEvent }}</td>
                <td>{{ event.lieu }}</td>
                <td>{{ event.nbPlace }}</td>
                <td>{% if event.dtEvent %}{{ event.dtEvent|date('Y-m-d') }}{% endif %}</td>
                <td>{{ event.prix }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('events_show', { 'idEv': event.idEv }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('events_edit', { 'idEv': event.idEv }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br>
        <br>
        <form action={{ path("events_new")}}>
        <button>Create NEW</button>
        </form>
    </center>
{% endblock %}
