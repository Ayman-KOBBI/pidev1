

{% extends 'baselogin.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}


{% block body %}


    <div class="mdl-card__supporting-text">
        <form method="post" action="{{ path("fos_user_registration_register") }}" id="form">
            {{ form_start(form) }}
            <div class="mdl-textfield mdl-js-textfield">
                {{ form_widget(form.username, { 'attr': {'class': 'mdl-textfield__input','type':'text','name':'username','id':'username' } }) }}
                <label class="mdl-textfield__label" for="username">Username</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                {{ form_widget(form.email,  { 'attr': {'class': 'mdl-textfield__input','type':'text','name':'email','id':'email' } }) }}
                <label class="mdl-textfield__label" for="email">E-mail Address</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                {{ form_widget(form.plainPassword.first,  { 'attr': {'class': 'mdl-textfield__input','type':'password','name':'plainPassword.first','id':'plainPassword.first' } }) }}
                <label class="mdl-textfield__label" for="plainPassword.first">Password</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                {{ form_widget(form.plainPassword.second,  { 'attr': {'class': 'mdl-textfield__input','type':'password','name':'plainPassword.second','id':'plainPassword.second' } }) }}
                <label class="mdl-textfield__label" for="plainPassword.second">Re-Type Password</label>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}"/>
            </div>
            {{ form_end(form) }}
        </form>
    </div>


{% endblock %}


