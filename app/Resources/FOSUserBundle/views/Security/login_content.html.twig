{% extends 'baselogin.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body %}

    <div class="mdl-card__supporting-text">

        <form  action="{{ path("fos_user_security_check") }}" method="post" id="loginForm">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="mdl-textfield mdl-js-textfield">
                <label class="mdl-textfield__label" for="username">{{ 'security.login.username'|trans }}</label>
                <input class="mdl-textfield__input" type="text" name="_username" id="username" value="{{ last_username }}" required="required" autocomplete="username" >
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <label class="mdl-textfield__label" for="password">{{ 'security.login.password'|trans }}</label>
                <input class="mdl-textfield__input" type="password" id="password" name="_password" required="required" autocomplete="current-password"">

            </div>

            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

        </form>

    </div>
{% endblock %}